@model VetClinic.Common.Entities.Reception

@{
    ViewData["Title"] = "Решение";
}

<h1>Определите решение</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseTreatmentState">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="state" value="TreatmentCompleted">
                    <label class="form-check-label">
                        Выписка
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="state" value="InHospital">
                    <label class="form-check-label">
                        Стационар
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Далее" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
