@model VetClinic.Common.Entities.Reception

@{
    ViewData["Title"] = "Create";
}

<div>
    <h4>Reception</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class="col-sm-10">
            @Model.Owner.Surname @Model.Owner.Name @Model.Owner.Patronymic
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animal.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TreatmentState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TreatmentState)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.Surname @Model.Employee.Name @Model.Employee.Patronymic
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <form asp-action="Create">
            <input type="hidden" asp-for="OwnerId"/>
            <input type="hidden" asp-for="AnimalId"/>
            <input type="hidden" asp-for="EmployeeId"/>
            <input type="hidden" asp-for="Description"/>
            <input type="hidden" asp-for="Date"/>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </form>
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
