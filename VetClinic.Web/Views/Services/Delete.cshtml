@model VetClinic.Common.Entities.Service

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Удаление услуги</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayName("Название услуги")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Name)</p>
                <h4 class="card-title">@Html.DisplayName("Цена услуги")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Price)</p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <br />
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку услуг</a>

                </form>
            </div>
        </div>
    </div>
</div>

