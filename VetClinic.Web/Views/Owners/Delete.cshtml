@model VetClinic.Common.Entities.Owner

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Удаление владельца</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayNameFor(model => model.SerialNumber)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.SerialNumber)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Surname)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Surname)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Name)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Name)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Patronymic)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Patronymic)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Sex)</h4>
                <p class="card-text">@(Model.Sex ? "Мужской" : "Женский")</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.DateOfBirth)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.DateOfBirth)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.DocumentData)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.DocumentData)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Phone)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Phone)</p>
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Email)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Email)</p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <br />
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку владельцев</a>

                </form>
            </div>
        </div>
    </div>
</div>

