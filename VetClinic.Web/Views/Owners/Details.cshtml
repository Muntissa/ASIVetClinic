@model VetClinic.Common.Entities.Owner

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Подробная информация</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.SerialNumber):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.SerialNumber)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Surname):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Surname)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Name):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Name)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Patronymic):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Patronymic)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Sex):</div>
                        <div class="col-sm-8">@(Model.Sex ? "Мужской" : "Женский")</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DateOfBirth):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DocumentData):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.DocumentData)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Phone):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Phone)</div>
                    </div>
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Email):</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="row mt-4 justify-content-center">
                        <div class="col-sm-12 text-center">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mb-3">Изменить</a>
                            <br />
                            <a asp-action="Index" class="btn btn-primary">Вернуться к списку владельцев</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
