@model IEnumerable<VetClinic.Common.Entities.Hospital>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt-5">
    <h1 class="text-center mb-4">Госпитали</h1>
    <div class="row">
        <div class="col-md-12 col-lg-6 mb-4 mb-lg-0">
            <a asp-action="Create" class="btn btn-success">Зарегестрировать новый госпиталь</a>
        </div>
    </div>
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.InventoryNumber)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Type)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Lenght)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Width)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Height)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InventoryNumber</td>
                        <td>@item.Type</td>
                        <td>@item.Lenght</td>
                        <td>@item.Width</td>
                        <td>@item.Height</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">Изменить</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm me-2">Подробнее</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

