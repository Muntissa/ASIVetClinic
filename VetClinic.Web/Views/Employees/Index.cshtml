@model IEnumerable<VetClinic.Common.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a class="text-warning" asp-action="RegisterNew" asp-route-role="Регистратор">Добавить регистратора</a> | 
<a class="text-warning" asp-action="RegisterNew" asp-route-role="Врач">Добавить врача</a>

@if (User.IsInRole("admin"))
{
    <text> | </text>
    <a class="text-danger" asp-action="RegisterNew" asp-route-role="Главный врач">Добавить глав. врача</a>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a>

                    @if (User.IsInRole("admin") || User.IsInRole("Главный врач")) 
                    {
                        <text> | </text>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Редактировать</a>
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Удалить</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>