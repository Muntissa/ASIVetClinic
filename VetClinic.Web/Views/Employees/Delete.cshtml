@model VetClinic.Common.Entities.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Удаление персонала</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayNameFor(model => model.Surname)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Surname)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Name)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Name)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Patronymic)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Patronymic)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Sex)</h4>
                <p class="card-text">@(Model.Sex ? "Мужчина" : "Женщина")</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.DateOfBirth)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.DateOfBirth)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.EmploymentDate)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.EmploymentDate)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Position)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Position)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Qualification)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Qualification)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.Email)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Email)</p>

                <h4 class="card-title">@Html.DisplayNameFor(model => model.PhoneNumber)</h4>
                <p class="card-text">@Html.DisplayFor(model => model.PhoneNumber)</p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <br />
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку персонала</a>

                </form>
            </div>
        </div>
    </div>
</div>

