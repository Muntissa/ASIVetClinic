@model VetClinic.Common.Entities.Diagnosis

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center mt-5 mb-3">Создание нового диагноза</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name">Название</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Создать</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <a asp-action="Index" class="btn btn-secondary">Вернуться к списку диагнозов</a>
        </div>
    </div>
</div>


