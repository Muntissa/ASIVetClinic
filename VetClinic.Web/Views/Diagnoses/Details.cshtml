@model VetClinic.Common.Entities.Diagnosis

@{
    ViewData["Title"] = "Детальная информация";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Детальная информация</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4 border-bottom">
                        <div class="col-sm-4 fw-bold">Название диагноза:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Name)</div>
                    </div>
                    <div class="row mt-4 justify-content-center">
                        <div class="col-sm-12 text-center">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mb-3">Изменить</a>
                            <br />
                            <a asp-action="Index" class="btn btn-primary">Вернуться к списку диагнозов</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

