@model VetClinic.Common.Entities.Animal

@{
    ViewData["Title"] = "Изменение";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Изменение данных о питомце</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Sex" /> @Html.DisplayNameFor(model => model.Sex)
                            </label>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Breed" class="control-label"></label>
                            <input asp-for="Breed" class="form-control" />
                            <span asp-validation-for="Breed" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Color" class="control-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <figure>
                                <img style="max-width: 100%; max-height: 200px; margin-top: 10px;" id="previousPhoto" src="@Model.PhotoPath" />
                                <figcaption>Предыдущее фото</figcaption>
                            </figure>
                        </div>
                        <div class="mb-3">
                            <input type="file" id="apartamentPhotoInput" name="upload" onchange="previewImage()" />
                            <img id="apartamentPhotoPreview" src="#" alt="Выбранное фото" style="display:none; max-width: 100%; max-height: 200px; margin-top: 10px;" />
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Вернуться к полному списку питомцев</a>
                        </div>
                    </form>
                </div>
            </div>
         </div>
    </div>
</div>


<script>
    function previewImage() {
        var preview = document.getElementById("apartamentPhotoPreview");
        var fileInput = document.getElementById("apartamentPhotoInput");

        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = "block";
            };
            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
